{
    "manifest_version": 2,

    "name": "chrome_substitution",
    "version": "0.1",
    "permissions": [
        "*://*/*",
        "background",
        "activeTab"
    ],
    "background": {
        "scripts": ["jquery.min.js", "background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
          "matches": ["*://*/*"],
          "js": ["jquery.min.js", "main_content.js"],
          "run_at": "document_idle",
          "all_frames": true
        }
    ]
}
